<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pager_grey"
    tools:context=".ui.activity.setting.SafeCenterActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_change_psd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/btn_change_safe_psd_text"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:drawableRight="@mipmap/ic_indicator_grey_right"
        android:paddingRight="15dp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />






</androidx.constraintlayout.widget.ConstraintLayout>