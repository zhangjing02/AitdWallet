<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_currency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_pager_grey">

    <TextView
        android:id="@+id/tv_version_log_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Version 1.0.2"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_main_black"/>

    <TextView
        android:id="@+id/tv_version_log_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Version 1.0.2"
        android:letterSpacing="0.1"
        android:textSize="16sp"
        android:textColor="@color/text_main_80_grey"/>

</LinearLayout>
