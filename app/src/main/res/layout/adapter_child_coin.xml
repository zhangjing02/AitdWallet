<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_currency"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingBottom="10dp"
    android:paddingTop="1dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_line_10_blue" />

    <TextView
        android:id="@+id/tv_coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=""
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_coin_address"
        android:layout_width="120dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:ellipsize="middle"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin_name"
        android:text="mseegPsRf33A6KwBkqiHVmJCJXNC2bsuvg"
        android:textColor="@color/textGrey"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/tv_currency_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="-0.0025Btc"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_fiat_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_currency_balance"
        android:text="≈ ￥0.000"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/tv_currency_balance"/>


</androidx.constraintlayout.widget.ConstraintLayout>
