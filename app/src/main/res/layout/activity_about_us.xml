<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pager_grey"
    tools:context=".ui.activity.setting.AboutUsActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="79dp"
        android:layout_height="79dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_about_us_logo"/>

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/text_main_60_black"/>


    <TextView
        android:id="@+id/tv_version_log"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_version_name"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:text="@string/text_version_log_tag"
        android:textSize="15sp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/ic_indicator_grey_right"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/tv_version_site"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_version_log"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:text="@string/text_website_tag"
        android:textSize="15sp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/tv_version_site_address"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_version_log"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:text="http://www.aitd.pro"
        android:textSize="14sp"
        android:textColor="#FF5E6992"
        android:gravity="center_vertical"
        android:paddingRight="15dp"/>


    <View
    android:id="@+id/line1"
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:layout_marginLeft="15dp"
    android:background="@color/color_line_10_blue"
    app:layout_constraintTop_toBottomOf="@+id/tv_version_site_address"/>


    <TextView
        android:id="@+id/tv_email_tag"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:background="@color/white"
        android:text="@string/text_email_tag"
        android:textSize="15sp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/tv_email_address"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:text="metech@aitd.pro"
        android:textSize="14sp"
        android:textColor="#FF5E6992"
        android:gravity="center_vertical"
        android:paddingRight="15dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line_10_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_address"/>


    <TextView
        android:id="@+id/tv_twitter_tag"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:background="@color/white"
        android:text="@string/text_twitter_tag"
        android:textSize="15sp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/tv_twitter_address"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:text="AitdID Official"
        android:textSize="14sp"
        android:textColor="#FF5E6992"
        android:gravity="center_vertical"
        android:paddingRight="15dp"/>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line_10_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_twitter_address"/>


    <TextView
        android:id="@+id/tv_wechat_tag"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:background="@color/white"
        android:text="@string/text_wechat_tag"
        android:textSize="15sp"
        android:textColor="@color/text_main_black"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/tv_wechat_address"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:text="AitdID"
        android:textSize="14sp"
        android:textColor="#FF5E6992"
        android:gravity="center_vertical"
        android:paddingRight="15dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>