<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.wallet.initwallet.SelectWalletTypeActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_hd_wallet"
        style="@style/bg_button_wallet_yellow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/vector_drawable_wallet"
        android:paddingHorizontal="100dp"
        android:text="HD多链钱包"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />
    <TextView
        android:id="@+id/btn_single_wallet"
        style="@style/bg_button_wallet_green"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/vector_drawable_wallet"
        android:paddingHorizontal="100dp"
        android:text="单链钱包"
        app:layout_constraintTop_toBottomOf="@+id/btn_hd_wallet" />
    <TextView
        android:id="@+id/btn_multi_sign_wallet"
        style="@style/bg_button_wallet_orange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/vector_drawable_wallet"
        android:paddingHorizontal="100dp"
        android:text="多重签名钱包"
        app:layout_constraintTop_toBottomOf="@+id/btn_single_wallet" />
    <TextView
        android:id="@+id/btn_nfc_wallet"
        style="@style/bg_button_wallet_purple"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/vector_drawable_wallet"
        android:paddingHorizontal="100dp"
        android:text="NFC卡钱包"
        app:layout_constraintTop_toBottomOf="@+id/btn_multi_sign_wallet" />


</androidx.constraintlayout.widget.ConstraintLayout>