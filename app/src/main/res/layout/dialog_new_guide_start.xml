<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        style="@style/bg_words_white"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <LinearLayout
            android:id="@+id/layout_welcome_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">

            <!--            <TextView-->
            <!--                android:id="@+id/tv_shot_warning_tittle01"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="3dp"-->
            <!--                android:text="@string/text_new_guide_hello"-->
            <!--                android:textColor="@color/text_main_black"-->
            <!--                android:textSize="29sp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/tv_shot_warning_tittle02"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:text="@string/text_new_guide_start_content"
                android:textColor="@color/text_main_black"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_i_know"
            style="@style/bg_button_hollow_blue"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginBottom="35dp"
            android:text="@string/btn_new_user_guide_no_need"
            android:textColor="@color/bg_button_blue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/layout_welcome_content"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/btn_i_new"
            style="@style/bg_button_blue"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginBottom="35dp"
            android:text="@string/btn_new_user_guide_look_at"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/layout_welcome_content"
            app:layout_constraintWidth_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_shot_warning"
        android:layout_width="214dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_new_guide_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

</androidx.constraintlayout.widget.ConstraintLayout>