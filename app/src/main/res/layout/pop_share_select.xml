<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="100dp"
    android:background="@drawable/bg_wallet_manage_select_white"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_import_wallet"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"
        android:drawableLeft="@mipmap/ic_import_wallet_black"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/text_dialog_import_wallet"
        android:textColor="@color/text_main_black"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_middle"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_line_10_grey"
        app:layout_constraintBottom_toTopOf="@+id/tv_wallet_manage"
        app:layout_constraintTop_toBottomOf="@+id/tv_import_wallet"/>

    <TextView
        android:id="@+id/tv_wallet_manage"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="18dp"
        android:drawableLeft="@mipmap/ic_wallet_manager_black"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/text_dialog_wallet_manage"
        android:textColor="@color/text_main_black"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_import_wallet" />


</LinearLayout>
