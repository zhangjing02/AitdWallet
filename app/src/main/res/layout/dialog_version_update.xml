<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_version_update"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        style="@style/bg_words_white"
        android:layout_width="315dp"
        android:layout_height="340dp"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_shot_warning_tittle01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="检测到新版本 V1.0.0"
                android:textColor="@color/text_main_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_shot_warning_tittle02"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_main_60_black"
                android:textSize="14sp" />
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/btn_version_update"-->
<!--            android:layout_width="149dp"-->
<!--            android:layout_height="44dp"-->
<!--            android:layout_marginBottom="30dp"-->
<!--            android:background="@drawable/corner_blue_change"-->
<!--            android:text="立即更新"-->
<!--            android:gravity="center"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="16sp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_version_update"
            android:layout_width="149dp"
            android:layout_height="44dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/corner_blue_change"
            android:text="立即更新"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_shot_warning"
        android:layout_width="315dp"
        android:layout_height="187dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_version_update_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>